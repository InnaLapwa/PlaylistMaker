<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PlaylistMaker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="background_color">@color/deep_gray</item>
        <item name="background_main_color">@color/deep_gray</item>
        <item name="text_color">@color/ultra_white</item>
        <item name="icon_color">@color/ultra_white</item>
        <item name="icon_header_color">@color/ultra_white</item>
        <item name="background_search_color">@color/ultra_white</item>
        <item name="search_color">@color/deep_gray</item>
        <item name="track_artist_text_color">@color/white</item>
        <item name="track_icon_color">@color/white</item>
        <item name="search_text_color">@color/white</item>
        <item name="search_icon_color">@color/white</item>
        <item name="search_button_text_color">@color/deep_gray</item>
        <item name="search_button_background_color">@color/white</item>
        <item name="player_text_color">@color/white</item>
        <item name="player_play_icon_color">@color/white</item>
    </style>
</resources>