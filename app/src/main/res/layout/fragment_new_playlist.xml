<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="?attr/background_color"
    tools:context=".library.playlists.newPlaylist.ui.NewPlaylistFragment">

    <LinearLayout style="@style/HeaderLayoutStyle"
        android:id="@+id/header"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/back"
            style="@style/HeaderIconLayoutStyle"
            android:layout_marginStart="0dp">

            <ImageView style="@style/HeaderIconStyle"/>
        </FrameLayout>

        <TextView
            style="@style/HeaderTextStyle"
            android:text="@string/newPlaylist_header_text"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:cornerRadius="8dp"
        android:background="@drawable/gapped_rectangle"
        android:src="@drawable/ic_new_image"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:hint="Название*"
        android:background="@drawable/rounded_rectangle"
        android:textSize="16sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cover"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:layout_gravity="center"
        android:hint="Описание"
        android:background="@drawable/rounded_rectangle"
        android:textSize="16sp"
        android:fontFamily="@font/ys_display_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name"/>

    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Создать"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:fontFamily="@font/ys_display_medium"
        app:cornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>