<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_main_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:paddingStart="@dimen/padding_sides"
        android:paddingTop="14dp"
        android:text="@string/app_name"
        android:fontFamily="@font/ys_display_medium"
        android:textColor="@color/white"
        android:textSize="@dimen/title_text_size"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_sides"
        android:paddingTop="@dimen/padding_title_content"
        android:paddingEnd="@dimen/padding_sides"
        android:paddingBottom="24dp">

        <Button
            android:id="@+id/button_search"
            android:text="@string/button_search_name"
            app:icon="@drawable/ic_search"
            style="@style/MainButtonStyle"/>

        <Button
            android:id="@+id/button_library"
            android:text="@string/button_library_name"
            app:icon="@drawable/ic_library"
            style="@style/MainButtonStyle"/>

        <Button
            android:id="@+id/button_settings"
            android:text="@string/button_settings_name"
            app:icon="@drawable/ic_settings"
            style="@style/MainButtonStyle"/>
    </LinearLayout>

</LinearLayout>