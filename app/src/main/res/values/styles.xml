<?xml version="1.0" encoding="utf-8" ?>
<resources>
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/deep_gray</item>
        <item name="android:textSize">@dimen/main_button_text_size</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="cornerRadius">@dimen/main_buttons_corner_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/main_icon_text_padding</item>
        <item name="iconSize">@dimen/main_icon_size</item>
        <item name="iconTint">@color/deep_gray</item>
    </style>
    
    <style name="SettingsTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/settings_padding_left</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/settings_list_text_size</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>

    <style name="SettingsImageLayoutStyle">
        <item name="android:layout_width">@dimen/icon_layout_size</item>
        <item name="android:layout_height">@dimen/icon_layout_size</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/settings_margin_right</item>
    </style>

    <style name="SettingsListItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_list_layout_height</item>
    </style>

    <style name="SearchEditTextIconStyle">
        <item name="android:layout_width">@dimen/search_icon_size</item>
        <item name="android:layout_height">@dimen/search_icon_size</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HeaderLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/header_height</item>
    </style>

    <style name="HeaderIconLayoutStyle">
        <item name="android:layout_width">@dimen/icon_layout_size</item>
        <item name="android:layout_height">@dimen/icon_layout_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/settings_padding_left</item>
    </style>

    <style name="HeaderIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/ic_arrow_back</item>
    </style>

    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">?attr/text_color</item>
    </style>
</resources>